        <div class="row property__gallery" >
            {{#each products}}
            <div class=" col-md-3  mix women"  >
                <div class="product__item">

                    <div class="product__item__pic set-bg" data-setbg="/product-images/{{this._id}}.jpeg">
                        <div class="label new">New</div>
                        <ul class="product__hover">
                            <li><a href="/product-details/{{this._id}}" class="/user/image-popup"><span
                                        class="arrow_expand"></span></a></li>
                            <li><a href="#" onclick="wishList('{{this._id}}')" ><span class="icon_heart_alt"></span></a></li>
                            <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="/product-details/{{this._id}}">{{this.name}}</a></h6>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <div class="product__price">${{this.price}}</div>
                        {{!-- <a class="btn btn-primary" href="/add-cart/{{this._id}}">Add Cart</a> --}}
                        <button onclick="addCart('{{this._id}}')" class="btn btn-primary">Add Cart</button>
                    </div>
                    {{!-- button function script --}}
                    <script>
                        function addCart(productId) {
                            $.ajax({
                                url: '/add-cart/' + productId,
                                method: 'get',
                                success: (response) => {
                                    if (response.status) {
                                        let count = $('#cart-count').html()
                                        count = parseInt(count) + 1
                                        $("#cart-count").html(count)
                                       
                                        Swal.fire({
                                            position: 'top-end',
                                            icon: 'success',
                                            title: 'Added to cart',
                                            showConfirmButton: false,
                                            timer: 1500
                                        })
                                        $('#cartadd').load(location.href + ' #cartadd')
                                    }

                                }
                            })
                        }
                    </script>
                </div>


            </div>
            {{/each}}

            <div class="col-lg-3 col-md-4 col-sm-6 mix women men kid accessories cosmetic">
                <div class="product__item sale">

                </div>
