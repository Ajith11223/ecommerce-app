{{!-- //ajax --}}
<script>
    function addCart(productId) {
        $.ajax({
            url: '/add-cart/' + productId,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    let count = $('#cart-count').html()
                    count = parseInt(count) + 1
                    $("#cart-count").html(count)
                    $('#cartadd').load(location.href + ' #cartadd')
                }

            }
        })
    }
</script>
{{!-- ///filtercod --}}
<script>
    function filter(type) {
        $.ajax({
            url: '/filter/' + type,
            method: 'get',
            success: (response) => {
                location.href = '/mens'
            }

        })
    }
</script>
<script>
    function wishList(productId) {
        $.ajax({
            url: '/add-wish-list/' + productId,
            method: 'get',
            success: (response) => {
                if (response.logged) {
                    $('#wishadd').load(location.href + ' #wishadd')

                    //alert('added success')
                    swal('wishlist added')
                } else {
                    swal('wishlist remove')
                $('#wishadd').load(location.href + ' #wishadd')

                }
            }
        })
    }
</script>