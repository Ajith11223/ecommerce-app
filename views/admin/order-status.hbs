<section class="p-3" style="min-height: 70vh; margin-block-start: 300px; "  >
  <table class="table table-bordered" style="height: 14vh;">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">NAME</th>
      <th scope="col">PAYMENT</th>
      <th scope="col">DELIVERY STATUS</th>
      <th scope="col">MOBILE</th>
      <th scope="col">STATUS</th>
      {{!-- <th scope="col">ORDER DATE</th> --}}
      <th scope="col">AMOUNT</th>
      <th scope="col">ADRESS</th>    
      {{!-- <th scope="col">OPTIONS</th> --}}
      <th scope="col">CHANGE</th>    
       {{!-- <th scope="col">STATUS</th> --}}

    </tr>
  </thead>
 
  <tbody>
    {{#each  orderProduct}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td scope="row">{{this.deliveryAdress.name}}</td>
      <td scope="row">{{this.paymentMethod}}</td>
      <td>{{this.deliveryStatus}}</td>
      <td scope="row">{{this.deliveryAdress.mobile}}</td>
      <td scope="row">{{this.products.[0].status}}</td>
      {{!-- <td>{{this.deliveryAdress.date}}</td> --}}
      <td scope="row">{{this.deliveryAdress.totalAmount}}</td>
      <td scope="row">{{this.deliveryAdress.adress}},{{this.deliveryAdress.country}},{{this.deliveryAdress.state}}</td>
      <td scope="row">
       <a href="/admin/change-status/{{this._id}}"><button  class="btn btn-success pl-5"> deliverd  </button></a> <br>
       <a href="/admin/change-status0/{{this._id}}"><button  class="btn btn-blue pl-5"> Shipped </button></a> <br>
       <a href="/admin/change-status1/{{this._id}}"><button class="btn btn-primary"  >pending</button></a><br> 
       <a href="/admin/change-status3/{{this._id}}"><button class="btn btn-info"  >placed</button></a><br> 
       <a href="/admin/change-status2/{{this._id}}"><button class="btn btn-danger" onclick="return confirm('Are you sure')" >Cancel </button></a> 
      </td>
      {{!-- <td scope="row">{{this.deliveryAdress.deliveryStatus}}</td> --}}
    </tr>
    {{/each}}
  </tbody>
  
</table>
</section>
