<script>
    function wishList(productId) {
        $.ajax({
            url: '/add-wish-list/' + productId,
            method: 'get',
            success: (response) => {
                if (response.logged) {
                    $('#wishadd').load(location.href + ' #wishadd')

                    alert('added success')
                    swal('Added successful')
                } else {
                    swal('wishlist removed')
                    $('#wishadd').load(location.href + ' #wishadd')


                }
            }
        })
    }
</script>